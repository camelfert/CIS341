@model Comment

@{
    ViewData["Title"] = "Confirm Comment Deletion";
}
<center>
    <h1>Delete Comment</h1>
</center>

<h3>Are you sure you want to delete your comment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CommentContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommentContent)
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CommentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Post</a>
    </form>
</div>
