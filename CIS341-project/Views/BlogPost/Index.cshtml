@model List<BlogPostDTO>

@{
    ViewData["Title"] = "All Blog Posts";
}

<center>
    <h1>All Blog Posts</h1>
</center>

<!-- list all blog posts in DB -->
@foreach (var post in Model)
{
    <article class="post-preview">
        <h2>
            <a asp-controller="BlogPost" asp-action="Details" asp-route-id="@post.BlogPostId">
                @post.Title
            </a>
        </h2>
        <p class="post-meta">
            Posted by @post.PostAuthor on @post.DatePublished.ToString("MMMM dd, yyyy")
        </p>
        <p>@post.Content.Substring(0, Math.Min(100, post.Content.Length))... <a asp-controller="BlogPost" asp-action="Details" asp-route-id="@post.BlogPostId">Read more</a></p>
    </article>
    <hr>
}