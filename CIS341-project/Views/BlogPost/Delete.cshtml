@model CIS341_project.ViewModels.BlogPostDTO

@{
    ViewData["Title"] = "Confirm Post Deletion";
}
<center>
    <h1>Delete</h1>
</center>

<h3>Are you sure you want to delete this post?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePublished)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostAuthor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostAuthor)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BlogPostId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-controller="BlogPost" asp-action="Details" asp-route-id="@Model.BlogPostId">Back to Post</a>
    </form>
</div>
